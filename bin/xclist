#!/usr/bin/ruby
#
$:.unshift File.dirname(__FILE__)

require 'pathname'
require_relative '../lib/xc_script.rb'
require_relative '../lib/xc_config.rb'

def main
  config = load_config

  exit(1) unless parse_args(ARGV, config)
  puts config

  project_names = list_project_names(
    config[:search_path],
    config[:exclude_paths],
    config[:search_depth],
    config # option
  )

  exit(1) if project_names.empty?

  puts_project_names(project_names)
end

def parse_args(argv, config)
  if argv.length == 0
    usage(:illegal_arguments)
    return false
  end

  arg = argv.shift

  if arg == "--use-index"
    config[:use_index] = true
    arg = argv.shift
  end

  if arg
    config[:search_path] = arg
    arg = argv.shift

    if arg && arg.to_i
      config[:search_depth] = arg.to_i
    end
    return true
  else
    usage(:illegal_arguments)
    return false
  end

end

def usage(error_sym)
  case error_sym
  when :illegal_arguments
    STDERR.puts <<EOS
Usage: xclist <--use-index> search-path <depth>

Required:
  search-path: Search path. 

Option:
  --use-index: Use cache for searching project paths.
  depth: Number of depth of directory-search-recursively.
EOS
  end
end

def puts_project_names(project_names)
  puts project_names.join("\n")
end

main
