#!/usr/bin/ruby
#
$:.unshift File.dirname(__FILE__)

require 'pathname'
require_relative '../lib/xc_script.rb'
require_relative '../lib/xc_config.rb'

def main
  config = load_config

  exit(1) unless parse_args(ARGV, config)

  projects = list_projects(
    config[:search_path],
    config[:exclude_paths],
    config[:search_depth]
  )
  exit(1) if projects.empty?

  projects = prior_xcworkspace(projects)
  put_file(projects)
end

def parse_args(argv, config)
  if argv.length == 0
    usage(:illegal_arguments)
    return false
  end

  config[:search_path] = argv[0]
  return true
end

def usage(error_sym)
  case error_sym
  when :illegal_arguments
    puts "Usage: xccache <search-path> <depth>"
    puts ""
    puts "Option:"
    puts "\tdepth:depth of directory-search-recursively. default is #{PARAMS[:depth]}"
  end
end

def put_file(projects)
  puts project_names.join("\n")
end

main
